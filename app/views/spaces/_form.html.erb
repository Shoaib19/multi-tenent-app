<div class="new-space-form-container">
  <%= form_with model: @space, local: true, html: { class: "new-space-form" } do |f| %>
  <div class="new-space-field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "new-space-input" %>
  </div>

  <div class="new-space-field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "new-space-textarea" %>
  </div>

  <div class="new-space-field">
    <%= f.label :required_age_group_id, "Required Age Group" %><br>
    <%= f.collection_select :required_age_group_id, AgeGroup.all, :id, :name, prompt: "Any", class: "new-space-select" %>
  </div>

  <div class="new-space-button-container">
    <%= f.submit "Create Space", class: "new-space-submit" %>
  </div>
  <% end %>
</div>