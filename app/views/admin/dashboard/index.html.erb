<h1 class="admin-dashboard-title">Admin Dashboard</h1>

<div class="admin-metric-card">
  <p><strong>Total Users:</strong> <span class="admin-metric-value"><%= @user_count %></span></p>
</div>

<div class="admin-section">
  <h2 class="admin-section-title">Role Breakdown</h2>
  <ul class="admin-list">
    <% @role_breakdown.each do |role, count| %>
    <li><span class="admin-list-label"><%= role.capitalize %>:</span> <span class="admin-list-value"><%= count %></span></li>
    <% end %>
  </ul>
</div>

<div class="admin-section">
  <h2 class="admin-section-title">Age Group Breakdown</h2>
  <ul class="admin-list">
    <% @age_group_breakdown.each do |age_group, count| %>
    <li><span class="admin-list-label"><%= age_group %>:</span> <span class="admin-list-value"><%= count %></span></li>
    <% end %>
  </ul>
</div>

<div class="admin-section">
  <h2 class="admin-section-title">Space/Group by Age Group</h2>
  <ul class="admin-list">
    <% @space_type_breakdown.each do |age_group, count| %>
    <li><span class="admin-list-label"><%= age_group %>:</span> <span class="admin-list-value"><%= count %></span></li>
    <% end %>
  </ul>
</div>

<div class="admin-section">
  <h2 class="admin-section-title">Active vs Inactive Users (last 30 days)</h2>
  <ul class="admin-list">
    <li><span class="admin-list-label">Active Users:</span> <span class="admin-list-value"><%= @active_users_count %></span></li>
    <li><span class="admin-list-label">Inactive Users:</span> <span class="admin-list-value"><%= @inactive_users_count %></span></li>
  </ul>
</div>

<div class="admin-section">
  <h2 class="admin-section-title">Parental Consents</h2>
  <ul class="admin-list">
    <li><span class="admin-list-label">Pending:</span> <span class="admin-list-value"><%= @pending_consents %></span></li>
    <li><span class="admin-list-label">Accepted:</span> <span class="admin-list-value"><%= @accepted_consents %></span></li>
    <li><span class="admin-list-label">Rejected:</span> <span class="admin-list-value"><%= @rejected_consents %></span></li>
  </ul>
</div>