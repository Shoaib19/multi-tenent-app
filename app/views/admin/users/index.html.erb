<h1>Manage Users</h1>

<p><%= link_to "Create New User", new_admin_user_path %></p>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Age Group</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.age_group&.name || "Unassigned" %></td>
        <td>
          <%= link_to "Edit", edit_admin_user_path(user) %> |
          <%= button_to  "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
