<h1 class="admin-space-form-title">Edit Space</h1>

<%= form_with model: [:admin, @space], local: true, html: { class: "admin-space-form" } do |f| %>
<div class="admin-space-form-group">
  <%= f.label :name, class: "admin-space-label" %><br>
  <%= f.text_field :name, class: "admin-space-input" %>
</div>

<div class="admin-space-form-group">
  <%= f.label :description, class: "admin-space-label" %><br>
  <%= f.text_area :description, class: "admin-space-textarea" %>
</div>

<div class="admin-space-form-group">
  <%= f.label :required_age_group_id, "Required Age Group", class: "admin-space-label" %><br>
  <%= f.collection_select :required_age_group_id, AgeGroup.all, :id, :name, include_blank: true, class: "admin-space-select" %>
</div>

<div class="admin-space-form-group">
  <%= f.submit "Update Space", class: "admin-space-submit" %>
</div>
<% end %>

<p class="admin-space-back-link">
  <%= link_to "Back to Spaces", admin_spaces_path, class: "admin-space-back" %>
</p>