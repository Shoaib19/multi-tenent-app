<div class="auth-container">
  <h1 class="auth-title">Login</h1>

  <%= form_with url: login_path, local: true, html: { class: "auth-form" } do |f| %>
  <div class="form-group">
    <%= label_tag :email, "Email" %>
    <%= email_field_tag :email, nil, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password, nil, class: "form-control", required: true %>
  </div>

  <div class="form-actions">
    <%= submit_tag "Login", class: "btn-primary" %>
  </div>
  <% end %>

  <p class="auth-link">
    Don't have an account?
    <%= link_to "Sign Up", signup_path, class: "link-highlight" %>
  </p>
</div>