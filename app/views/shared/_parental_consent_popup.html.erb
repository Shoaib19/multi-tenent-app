<div id="parentalConsentModal" class="modal" style="display:block; background: rgba(0,0,0,0.5); position:fixed; top:0; left:0; right:0; bottom:0;">
  <div class="modal-content" style="background:white; padding:2em; margin:10% auto; max-width:400px; border-radius:4px;">
    <h2>Parental Consent Required</h2>
    <p>For your age group, we need parental consent. Please enter a parent/guardian email and choose Accept or Reject.</p>

    <%= form_with url: create_or_update_parental_consent_path, method: :post, local: true do |f| %>
    <div>
      <%= label_tag :parent_email, "Parent Email" %>
      <%= text_field_tag :parent_email, nil, required: true %>
    </div>
    <br>
    <div>
      <%= hidden_field_tag :decision, 'accepted' %>
      <%= submit_tag "Accept", class: "btn btn-success" %>
    </div>
    <% end %>

    <%= form_with url: create_or_update_parental_consent_path, method: :post, local: true do |f| %>
    <div>
      <%= hidden_field_tag :decision, 'rejected' %>
      <%= hidden_field_tag :parent_email, "" %>
      <%= submit_tag "Reject", class: "btn btn-danger" %>
    </div>
    <% end %>
  </div>
</div>