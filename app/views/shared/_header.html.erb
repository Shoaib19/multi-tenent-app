<header style="background: #f5f5f5; padding: 1em; margin-bottom: 2em; border-bottom: 1px solid #ddd;">
  <nav style="display: flex; justify-content: space-between; align-items: center; max-width: 800px; margin: auto;">
    <div>
      <%= link_to "Home", root_path, style: "text-decoration: none; font-weight: bold;" %>
    </div>

    <div>
      <% if current_user %>
        <% if current_user.admin? %>
        <span style="margin-right: 1em;">
          <%= link_to "Admin Dashboard", admin_dashboard_path, style: "text-decoration: none; font-weight: bold;" %>
        </span>
        <span style="margin-right: 1em;">
          <%= link_to "Manage Users", admin_users_path, style: "text-decoration: none; font-weight: bold;" %> 
        </span>
        <span style="margin-right: 1em;">
          <%= link_to "Manage Spaces", admin_spaces_path, style: "text-decoration: none; font-weight: bold;" %> 
        </span>
        <% end %>
        Logged in as <%= current_user.email %> |
        <%= button_to "Logout", logout_path, method: :delete, form_class: "inline-form" %>
      <% else %>
        <%= link_to "Login", login_path %> |
        <%= link_to "Sign Up", signup_path %>
      <% end %>
    </div>
  </nav>
</header>

<style>
  .inline-form {
    display: inline;
  }
</style>
